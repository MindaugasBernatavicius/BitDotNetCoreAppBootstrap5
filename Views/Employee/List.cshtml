@{
    ViewData["Title"] = "Employees List Page";
}

@model List<Employee>

<div class="text-center">
    @foreach (var item in Model)
    {
        // href="/Employee/Delete/3
    <p>
        @item.Id - @item.Name
        <a href="@Url.Action("Delete", "Employee", new { ID = item.Id })">Delete</a>
        <a href="@Url.Action("Details", "Employee", new { ID = item.Id })">Update</a>
    </p>
    }
    <hr />
    <form method="post" asp-controller="Employee" asp-action="Create">
        <label>Name:</label>
        <input type="text" name="name" />
        <input type="submit" value="Create Employee" name="submit" />
    </form>
</div>